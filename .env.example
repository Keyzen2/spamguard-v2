# =====================================================
# SPAMGUARD API v3.0 HYBRID - Environment Variables
# =====================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=change-this-to-a-random-secure-key

# Supabase (get from supabase.com)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
DATABASE_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# Redis (optional - can use in-memory cache)
REDIS_URL=redis://localhost:6379/0

# ML Model
MODEL_PATH=ml/models/spam_model_v1
MODEL_DEVICE=cpu

# Rate Limiting
RATE_LIMIT_ENABLED=true
MONTHLY_REQUEST_LIMIT=1000

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,*

# Logging
LOG_LEVEL=INFO

NVD_API_KEY=  # Obtener en: https://nvd.nist.gov/developers/request-an-api-key
GITHUB_TOKEN=  # Crear en: https://github.com/settings/tokens
